<div class="container">
  <div class="row py-4">
    <div clsss="offset-1">
      <h4><strong><%= @user.name %></strong>さんの詳細</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
     <div class="col-md-2">
       <table>
         <tr><%= image_tag @user.get_profile_image, size:"100x100" %></tr>
           <th>ユーザー名</th>
             <tr>
               <td><%= @user.name %></td>
             </tr>
      　    <th>メールアドレス</th>
      　      <tr>
           　   <td><%= @user.email %></th>
             </tr>
       </table>
     </div>
       <div class="col-md-5">
         <table class="table table-hover table-inverse">
           <tr>
             <th>投稿映画一覧</th>
             <th></th>
           </tr>
           <tbody>
             <% @movies.each do |movie| %>
             <tr>
               <td><%= movie.title %></td>
               <td><%= link_to '削除する', admin_movie_path(movie), method: :delete, class: 'btn btn-sm btn-danger' %></td>
             </tr>
             <% end %>
           </tbody>
         </table>
          <div class="d-flex justify-content-center"><%= paginate @movies %></div>
       </div>
       <div class="col-md-5">
         <table class="table table-hover table-inverse">
           <tr>
             <th>投稿コメント一覧</th>
             <th></th>
           </tr>
           <tbody>
             <% @comments.each do |comment| %>
             <tr>
               <td><%= comment.comment %></td>
               <td><%= link_to '削除する', admin_comment_path(comment), method: :delete, class: 'btn btn-sm btn-danger' %></td>
             </tr>
             <% end %>
           </tbody>
         </table>
          <div class="d-flex justify-content-center"><%= paginate @comments %></div>
       </div>
  </div>
</div>

