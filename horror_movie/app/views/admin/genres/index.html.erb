<div class="container">
  <div class="row py-4">
    <div clsss="offset-1">
      <h1>ホラージャンル一覧</h1>
    </div>
  </div>
</div>

<div class="container">
  <%= form_with model: @genre,url: admin_genres_path,method: :post do |f| %>
      <div class="form-group row">
        <%= f.label :name, "ジャンル名", :class => "col-md-2 col-form-label" %>
        <%= f.text_field :name, :class => "form-control col-md-3" %>
        <%= f.submit '新規登録', class: 'btn btn-dark ml-5' %>
      </div>
    <% end %>
</div>

<div class= "row">
    <div class= "offset-1 col-md-5">
        <table class= "table">
          <thead>
            <tr bgcolor= "whitesmoke">
              <th>ジャンル</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-info' %></td>
                <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: 'btn btn-danger' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>