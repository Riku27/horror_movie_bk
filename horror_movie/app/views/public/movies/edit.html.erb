<div class="container">
  <div class="row py-4">
    <div clsss="offset-1">
      <h1>映画編集</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @movie, url: public_movie_path, method: :patch, local: true do |f| %>

      <div class="form-group">
        <div calss="form-inline">
          <div class= "row pt-2">
          <%= f.label :title, "作品名", :class => "col-md-3 col-form-label" %>
          <%= f.text_field :title, :class => "form-control col-md-3" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div calss="form-inline">
          <div class="row pt-2">
          <%= f.label :genre, "ジャンル", :class => "col-md-3 col-form-label"%>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div calss="form-inline">
          <div class= "row pt-2">
          <%= f.label :director, "監督", :class => "col-md-3 col-form-label" %>
          <%= f.text_field :director, :class => "form-control col-md-3" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div calss="form-inline">
          <div class= "row pt-2">
          <%= f.label :watch, "鑑賞方法", :class => "col-md-3 col-form-label" %>
          <%= f.select :watch, ['映画館', '試写会', 'サブスクリプション', 'DVD/Blu-ray/VHS',
                                   '地上波テレビ放送', 'BS/CS', 'その他'], {include_blank: '---'} %>
          </div>
        </div>
      </div>

      <div class="position-static">
      <div class="field" id="star">
        <%= f.label :rate, "面白さ", :class => "col-3" %>
        <%= f.hidden_field :rate, id: :review_star %>
      </div>
      </div>
　　　　　<script>
            var elem = document.getElementById('star');
            var opt = {
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            scoreName: 'movie[rate]',
            half: true,
           };
            raty(elem,opt);
          </script>
          
      <div class="position-static">
      <div class="field" id="horror">
        <%= f.label :rate_horror, "怖さ", :class => "col-3" %>
        <%= f.hidden_field :rate_horror, id: :review_horror %>
      </div>
      </div>
          <script>
            var elem = document.getElementById('horror');
            var opt = {
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            scoreName: 'movie[rate_horror]',
            half: true,
           };
            raty(elem,opt);
          </script>

        <div class="form-group">
        <div calss="form-inline">
          <div class= "row pt-4">
          <%= f.label :year, "鑑賞日", :class => "col-md-3 col-form-label" %>
          <%= f.date_field :year, :class => "form-control col-md-3", placeholder: "鑑賞日"  %>
          </div>
        </div>
      </div>

      <%= f.submit '変更を保存', class: 'btn btn-warning' %>
      <% end %>

    </div>
  </div>
</div>
