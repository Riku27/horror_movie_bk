<div class="container">
  <div class="row py-4">
    <div clsss="offset-1">
      <h1>マイページ編集</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10">

      <%= form_with model: @user, url: public_users_information_path, method: :patch, local: true do |f| %>
      <div class="form-group">
        <div calss="form-inline">
          <div class= "row pt-2">
          <%= f.label :profile_imgae, "プロフィール画像", :class => "col-md-3 col-form-label" %>
          <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div calss="form-inline">
          <div class= "row pt-2">
          <%= f.label :name, "名前", :class => "col-md-3 col-form-label" %>
          <%= f.text_field :name, :class => "form-control col-md-3" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div calss="form-inline">
          <div class= "row pt-2">
          <%= f.label :email, "メールアドレス", :class => "col-md-3 col-form-label" %>
          <%= f.text_field :email, :class => "form-control col-md-3" %>
          </div>
        </div>
      </div>

      <%= f.submit '変更を保存', class: 'btn btn-warning' %>
      <% end %>

    </div>
  </div>
</div>

