<h4>マイページ</h4>

<div class= "container">
  <div class= "row">
    <div class= "col-md-4">
      <table>
        <tr><%= image_tag @user.get_profile_image, size:"100x100" %></tr>
        <tr>
          <th>ユーザー名</th>
          <th><%= @user.name %></th>
        </tr>
      　<tr>
      　   <th>メールアドレス</th>
      　   <th><%= @user.email %></th>
        </tr>
        <td><%= link_to "編集する", public_information_edit_path, class: "btn btn-success" %></td>
        <td><%= link_to "映画新規登録", new_public_movie_path, class: "btn btn-info" %></td>
      </table>
    </div>
    <div class= "col-md-8">
      <table class="table table-hover table-inveres">
      <thead>
        <p><strong>投稿映画一覧</strong></p>
        <tr>
        <th>タイトル</th>
        <th>ジャンル</th>
        <th>鑑賞日</th>
        <th></th>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |movie| %>
        <tr>
          <td><%= link_to movie.title, public_movie_path(movie) %></td>
          <td><%= movie.genre.name %></td>
          <td><%= movie.year %></td>
          <td><%= link_to '編集する', edit_public_movie_path(movie), class: 'btn btn-primary' %></td>
        </tr>

        <% end %>
      </tbody>
      </table>
    </div>

    </div>
  </div>
</div>
