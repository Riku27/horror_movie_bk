<div class="container">
  <div class="row py-4">
    <div clsss="offset-1">
      <h1>投稿映画一覧</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10">
      <% @movies.each do |movie| %>
      <h4><strong><%= movie.genre.name %>映画</strong><i class="fas fa-ghost"></i></h4>
        <table class="table table-hover table-inverse">
        <tr>
          <th>タイトル</th>
          <th>監督</th>
          <th>面白さ</th>
          <th>投稿ユーザー</th>
        </tr>
        <tbody>
          <tr>
            <td><%= link_to movie.title, public_movie_path(movie.id) %></td>
            <td><%= movie.director %></td>
            <td><%= movie.rate %></td>
            <td><%= movie.user.name %></td>
          </tr>
          <% end %>
        </tbody>
        </table>
    </div>
  </div>
</div>