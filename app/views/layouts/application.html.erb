<!DOCTYPE html>
<html>
  <head>
    <title>HorrorMovie</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class= "navbar navbar-expand-lg navbar-light" style= "background-color: black">
        <div class= "container">
          <%= link_to root_path, class: "navbar-brand p-3, btn btn-light" do %>
            <i class="fas fa-film"></i>
            Genre Horror
          <% end %>
          <div>
            <ul class= "navbar-nav ml-auto">
              <% if user_signed_in? %>
                <p><font color="red">
                  ようこそ、
                  <%= current_user.name %>
                  さん！
                  </font>
                </p>
                <li class= "nav-item pl-3">
                  <%= link_to my_page_public_users_path, class: 'nav-link text-dark' do %>
                    <button type= "button" class= "btn btn-light">マイページ</button>
                  <% end %>
                </li>
                <li class= "nav-item pl-3">
                  <%= link_to about_path, class: 'nav-link text-dark' do %>
                    <button type= "button" class= "btn btn-light">About</button>
                  <% end %>
                </li>
                <li class= "nav-item pl-3">
                  <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
                    <button type= "button" class= "btn btn-light">ログアウト</button>
                  <% end %>
                </li>

              <% elsif admin_signed_in? %>
                <li class= "nav-item pl-3">
                  <%= link_to admin_movies_path, class: 'nav-link text-dark' do %>
                    <button type= "button" class= "btn btn-light">映画一覧</button>
                  <% end %>
                </li>
                <li class= "nav-item pl-3">
                  <%= link_to admin_genres_path, class: 'nav-link text-dark' do %>
                  <button type= "button" class= "btn btn-light">ジャンル一覧</button>
                <% end %>
                </li>
                <li class= "nav-item pl-3">
                  <%= link_to admin_users_path, class: 'nav-link text-dark' do %>
                    <button type= "button" class= "btn btn-light">会員一覧</button>
                  <% end %>
                </li>
                <li class= "nav-item pl-3">
                  <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
                    <button type= "button" class= "btn btn-light">ログアウト</button>
                  <% end %>
                </li>

              <% else %>
                <li class= "nav-item pl-3">
                  <%= link_to about_path, class: 'nav-link text-dark' do %>
                    <button type= "button" class= "btn btn-light">About</button>
                  <% end %>
                </li>
                <li class= "nav-item pl-3">
                  <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
                    <button type= "button" class= "btn btn-light">新規登録</button>
                  <% end %>
                </li>
                <li class= "nav-item pl-3">
                  <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
                    <button type= "button" class= "btn btn-light">ログイン</button>
                  <% end %>
                </li>
              <% end %>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
